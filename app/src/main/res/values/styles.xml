<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_deep_purple_A700</item>
        <item name="colorPrimaryDark">@color/md_deep_purple_A700</item>
        <item name="colorAccent">@color/md_deep_purple_A400</item>
        <item name="background">@color/md_white_1000</item>
        <item name="colorSwitchThumbNormal">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>​
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        //texto
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textColorHint">@color/editTextColorBlack</item>
        <item name="android:textSize">@dimen/edittext_textsize_login</item>
        <item name="android:textColorPrimary">@color/editTextColorBlack</item>
        <item name="android:colorAccent">@color/editTextColorBlack</item>
        <item name="colorControlNormal">@color/editTextColorBlack</item>
        <item name="colorControlActivated">@color/editTextColorBlack</item>

        <item name="editTextColor">@color/md_white_1000</item>

        //botón
        <item name="colorButtonNormal">@color/md_deep_purple_A700</item>
        <item name="colorControlHighlight">@color/md_purple_400</item>
    </style>


    <style name="AppThemeX.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeX.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">

    </style>

    //DARK MODE
    <style name="AppTheme2" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/md_black_1000</item>
        <item name="colorPrimaryDark">@color/md_black_1000</item>
        <item name="colorAccent">@color/md_black_1000</item>
        <item name="background">@color/md_black_1000</item>
        <item name="colorSwitchThumbNormal">@color/md_pink_500_25</item>
        <item name="android:colorForeground">@color/md_pink_500_25</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/md_indigo_500</item>

        //texto
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">@dimen/edittext_textsize_login</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>

        <item name="editTextColor">@color/md_white_1000</item>

        //botón
        <item name="colorButtonNormal">@color/md_indigo_800</item>
        <item name="colorControlHighlight">@color/md_indigo_400</item>
    </style>


    // Cuadro de diálogo
    <style name="dialogo" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/colorAccent</item>

    </style>



</resources>
